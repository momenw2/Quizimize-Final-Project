<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/universityStyle/courseDetailsStyle.css" />
  </head>
  <body>
    <div class="container">
      <!-- Header Section -->
      <div class="header">
        <div class="breadcrumb">
          <a href="/universities/<%= university._id %>">University</a>
          <span>‚Ä∫</span>
          <a
            href="/universities/<%= university._id %>/faculties/<%= facultyIndex %>/courses?name=<%= encodeURIComponent(faculty.name) %>"
            ><%= faculty.name %></a
          >
          <span>‚Ä∫</span>
          <span><%= course.courseCode %></span>
        </div>

        <div class="course-header">
          <div class="course-code"><%= course.courseCode %></div>
          <h1 class="course-title"><%= course.courseName %></h1>
          <p class="faculty-name"><%= faculty.name %></p>
          <p class="university-name"><%= university.name %></p>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
          <div class="stat-card">
            <span class="stat-number"><%= course.level %></span>
            <span class="stat-label">Course Level</span>
          </div>
          <div class="stat-card">
            <span class="stat-number"><%= course.credits || 3 %></span>
            <span class="stat-label">Credits</span>
          </div>
          <div class="stat-card">
            <span class="stat-number"
              ><%= course.classrooms ? course.classrooms.length : 0 %></span
            >
            <span class="stat-label">Classrooms</span>
          </div>
          <div class="stat-card">
            <span class="stat-number">0</span>
            <span class="stat-label">Enrolled Students</span>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="content-grid">
        <div class="main-content">
          <!-- Classrooms -->
          <div class="info-card">
            <h2 class="card-title">Classrooms</h2>
            <% if (course.classrooms && course.classrooms.length > 0) { %>
            <div class="classrooms-list">
              <% course.classrooms.forEach((classroom, index) => { %>
              <div class="classroom-card">
                <div class="classroom-header">
                  <div class="classroom-name"><%= classroom.name %></div>
                  <% if (classroom.section) { %>
                  <span class="classroom-section"
                    ><%= classroom.section %></span
                  >
                  <% } %>
                </div>
                <% if (classroom.schedule) { %>
                <div class="schedule-info">
                  <span class="schedule-day"
                    ><%= classroom.schedule.day %></span
                  >
                  at <strong><%= classroom.schedule.time %></strong> <% if
                  (classroom.schedule.location) { %> in
                  <em><%= classroom.schedule.location %></em>
                  <% } %>
                </div>
                <% } %>
                <div class="students-count">
                  <%= classroom.students ? classroom.students.length : 0 %>
                  students enrolled
                </div>
                <% if (classroom.xp && classroom.xp > 0) { %>
                <div style="margin-top: 0.5rem">
                  <small style="color: #4a90e2; font-weight: 500">
                    XP: <%= classroom.xp %> ‚Ä¢ Level: <%= classroom.level || 1 %>
                  </small>
                </div>
                <% } %>
              </div>
              <% }) %>
            </div>
            <% } else { %>
            <div class="no-classrooms">
              <div class="no-classrooms-icon">üè´</div>
              <h3>No Classrooms Available</h3>
              <p>This course doesn't have any classrooms yet.</p>
            </div>
            <% } %>
          </div>

          <!-- Tabs Section -->
          <div class="info-card">
            <h2 class="card-title">Course Activities</h2>
            <div class="tabs-container">
              <div class="tabs-header">
                <button class="tab active" data-tab="timeline">
                  üìÖ Timeline
                </button>
                <button class="tab" data-tab="chat">üí¨ Chat</button>
                <button class="tab" data-tab="missions">üéØ Missions</button>
              </div>

              <!-- Timeline Tab Content -->
              <div class="tab-content active" id="timeline">
                <!-- Post Creation Form (Visible to Teacher Only) -->
                <% if (user._id === course.teacher.toString()) { %>
                <div class="post-creation-form" style="margin-bottom: 2rem">
                  <div class="info-card">
                    <h3 style="margin-bottom: 1rem">Create New Post</h3>
                    <form id="create-post-form">
                      <div style="margin-bottom: 1rem">
                        <select
                          name="postType"
                          id="post-type"
                          style="
                            padding: 0.5rem;
                            border: 1px solid #e9ecef;
                            border-radius: 4px;
                            margin-bottom: 1rem;
                          "
                        >
                          <option value="announcement">üì¢ Announcement</option>
                          <option value="assignment">üìù Assignment</option>
                          <option value="material">üìö Material</option>
                          <option value="general">üí¨ General</option>
                        </select>
                      </div>
                      <textarea
                        id="post-content"
                        placeholder="What's new in your course?"
                        rows="3"
                        style="
                          width: 100%;
                          padding: 0.75rem;
                          border: 1px solid #e9ecef;
                          border-radius: 8px;
                          resize: vertical;
                          font-family: inherit;
                        "
                      ></textarea>
                      <button
                        type="submit"
                        style="
                          margin-top: 0.5rem;
                          padding: 0.5rem 1.5rem;
                          background-color: #4a90e2;
                          color: white;
                          border: none;
                          border-radius: 6px;
                          cursor: pointer;
                        "
                      >
                        Post
                      </button>
                    </form>
                  </div>
                </div>
                <% } %>

                <!-- Posts Timeline -->
                <div class="timeline" id="course-timeline">
                  <% if (course.posts && course.posts.length > 0) { %> <%
                  course.posts.forEach((post, index) => { %>
                  <div
                    class="timeline-item post-item"
                    data-post-index="<%= index %>"
                  >
                    <div class="timeline-date">
                      <%= new Date(post.createdAt).toLocaleDateString() %> at
                      <%= new Date(post.createdAt).toLocaleTimeString([], {hour:
                      '2-digit', minute:'2-digit'}) %> <% if (post.postType ===
                      'announcement') { %> ‚Ä¢ üì¢ Announcement <% } %> <% if
                      (post.postType === 'assignment') { %> ‚Ä¢ üìù Assignment <% }
                      %> <% if (post.postType === 'material') { %> ‚Ä¢ üìö Material
                      <% } %>
                    </div>
                    <div class="timeline-title">
                      <%= post.authorName %> <% if (post.author.toString() ===
                      course.teacher.toString()) { %>
                      <span style="color: #4a90e2; font-size: 0.8rem"
                        >(Teacher)</span
                      >
                      <% } %>
                    </div>
                    <div class="timeline-description"><%= post.content %></div>

                    <!-- Post Actions -->
                    <div
                      class="post-actions"
                      style="
                        margin-top: 1rem;
                        display: flex;
                        gap: 1rem;
                        align-items: center;
                      "
                    >
                      <!-- Like Button -->
                      <button
                        class="like-btn <%= post.likes.some(like => like.user.toString() === user._id) ? 'liked' : '' %>"
                        style="
                          background: none;
                          border: none;
                          cursor: pointer;
                          color: #666;
                          display: flex;
                          align-items: center;
                          gap: 0.25rem;
                        "
                      >
                        ‚ù§Ô∏è
                        <span class="like-count"><%= post.likes.length %></span>
                      </button>

                      <!-- Comment Toggle -->
                      <button
                        class="comment-toggle-btn"
                        style="
                          background: none;
                          border: none;
                          cursor: pointer;
                          color: #666;
                          display: flex;
                          align-items: center;
                          gap: 0.25rem;
                        "
                      >
                        üí¨
                        <span class="comment-count"
                          ><%= post.comments.length %></span
                        >
                      </button>
                    </div>

                    <!-- Comments Section -->
                    <div
                      class="comments-section"
                      style="display: none; margin-top: 1rem"
                    >
                      <!-- Comments List -->
                      <div class="comments-list" style="margin-bottom: 1rem">
                        <% post.comments.forEach(comment => { %>
                        <div
                          class="comment-item"
                          style="
                            padding: 0.75rem;
                            background: #f8f9fa;
                            border-radius: 8px;
                            margin-bottom: 0.5rem;
                          "
                        >
                          <div
                            style="
                              font-weight: 600;
                              color: #2c3e50;
                              font-size: 0.9rem;
                            "
                          >
                            <%= comment.authorName %>
                          </div>
                          <div style="color: #666; margin: 0.25rem 0">
                            <%= comment.content %>
                          </div>
                          <div style="font-size: 0.75rem; color: #999">
                            <%= new Date(comment.createdAt).toLocaleDateString()
                            %>
                          </div>
                        </div>
                        <% }) %>
                      </div>

                      <!-- Add Comment Form -->
                      <form
                        class="add-comment-form"
                        style="display: flex; gap: 0.5rem"
                      >
                        <input
                          type="text"
                          placeholder="Write a comment..."
                          class="comment-input"
                          style="
                            flex: 1;
                            padding: 0.5rem;
                            border: 1px solid #e9ecef;
                            border-radius: 20px;
                          "
                          required
                        />
                        <button
                          type="submit"
                          style="
                            padding: 0.5rem 1rem;
                            background-color: #4a90e2;
                            color: white;
                            border: none;
                            border-radius: 20px;
                            cursor: pointer;
                          "
                        >
                          Post
                        </button>
                      </form>
                    </div>
                  </div>
                  <% }) %> <% } else { %>
                  <div
                    class="no-posts"
                    style="text-align: center; padding: 2rem; color: #666"
                  >
                    <div style="font-size: 3rem; margin-bottom: 1rem">üìù</div>
                    <h3>No posts yet</h3>
                    <p>Be the first to share something in this course!</p>
                  </div>
                  <% } %>
                </div>
              </div>

              <!-- Chat Tab Content -->
              <div class="tab-content" id="chat">
                <div class="chat-container">
                  <div class="chat-messages">
                    <div class="chat-message">
                      <div class="message-sender">Professor Smith</div>
                      <div class="message-bubble">
                        Welcome everyone to the course chat! Feel free to ask
                        questions here.
                      </div>
                      <div class="message-time">10:15 AM</div>
                    </div>
                    <div class="chat-message">
                      <div class="message-sender">Sarah Johnson</div>
                      <div class="message-bubble">
                        Hi Professor, when is the first assignment due?
                      </div>
                      <div class="message-time">10:22 AM</div>
                    </div>
                    <div class="chat-message">
                      <div class="message-sender">Professor Smith</div>
                      <div class="message-bubble">
                        The first assignment is due next Friday at 11:59 PM.
                      </div>
                      <div class="message-time">10:25 AM</div>
                    </div>
                    <div class="chat-message own">
                      <div class="message-sender">You</div>
                      <div class="message-bubble">
                        Thanks for the clarification!
                      </div>
                      <div class="message-time">10:28 AM</div>
                    </div>
                  </div>
                  <div class="chat-input">
                    <input
                      type="text"
                      placeholder="Type your message..."
                      id="chat-input-field"
                    />
                    <button id="send-message">Send</button>
                  </div>
                </div>
              </div>

              <!-- Missions Tab Content -->
              <div class="tab-content" id="missions">
                <div class="missions-list">
                  <div class="mission-card">
                    <div class="mission-header">
                      <div class="mission-title">Complete Assignment 1</div>
                      <div class="mission-status in-progress">In Progress</div>
                    </div>
                    <div class="mission-description">
                      Submit the first programming assignment covering basic
                      algorithms and data structures.
                    </div>
                    <div class="mission-details">
                      <div class="mission-xp">‚≠ê 150 XP</div>
                      <div class="mission-deadline">üìÖ Due: Oct 15, 2023</div>
                    </div>
                    <div class="mission-progress">
                      <div class="progress-bar">
                        <div class="progress-fill" style="width: 65%"></div>
                      </div>
                      <div class="progress-text">65% complete</div>
                    </div>
                  </div>
                  <div class="mission-card">
                    <div class="mission-header">
                      <div class="mission-title">Watch Week 3 Lectures</div>
                      <div class="mission-status completed">Completed</div>
                    </div>
                    <div class="mission-description">
                      Complete all video lectures and supplementary materials
                      for Week 3.
                    </div>
                    <div class="mission-details">
                      <div class="mission-xp">‚≠ê 50 XP</div>
                      <div class="mission-deadline">üìÖ Due: Oct 10, 2023</div>
                    </div>
                    <div class="mission-progress">
                      <div class="progress-bar">
                        <div class="progress-fill" style="width: 100%"></div>
                      </div>
                      <div class="progress-text">100% complete</div>
                    </div>
                  </div>
                  <div class="mission-card">
                    <div class="mission-header">
                      <div class="mission-title">
                        Participate in Discussion Forum
                      </div>
                      <div class="mission-status not-started">Not Started</div>
                    </div>
                    <div class="mission-description">
                      Post at least 3 meaningful contributions to the Week 4
                      discussion forum.
                    </div>
                    <div class="mission-details">
                      <div class="mission-xp">‚≠ê 75 XP</div>
                      <div class="mission-deadline">üìÖ Due: Oct 20, 2023</div>
                    </div>
                    <div class="mission-progress">
                      <div class="progress-bar">
                        <div class="progress-fill" style="width: 0%"></div>
                      </div>
                      <div class="progress-text">0% complete</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="sidebar">
          <!-- Course Information -->
          <div class="info-card">
            <h2 class="card-title">Course Information</h2>
            <div class="course-meta-grid">
              <div class="meta-item">
                <div class="meta-label">Course Code</div>
                <div class="meta-value"><%= course.courseCode %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Level</div>
                <div class="meta-value"><%= course.level %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Credits</div>
                <div class="meta-value"><%= course.credits || 3 %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Classrooms</div>
                <div class="meta-value">
                  <%= course.classrooms ? course.classrooms.length : 0 %>
                </div>
              </div>
            </div>
          </div>

          <!-- Teacher Information -->
          <div class="info-card">
            <h2 class="card-title">Course Teacher</h2>
            <div class="teacher-info">
              <div class="teacher-avatar">
                <%= user.fullName ? user.fullName.charAt(0).toUpperCase() : 'T'
                %>
              </div>
              <div class="teacher-details">
                <div class="teacher-name">
                  <%= user.fullName || 'Teacher' %>
                </div>
                <div class="teacher-role">Course Instructor</div>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="info-card">
            <h2 class="card-title">Actions</h2>
            <div class="action-buttons">
              <button class="btn btn-primary" onclick="enrollInCourse()">
                üìö Enroll in Course
              </button>
              <button class="btn btn-outline" onclick="shareCourse()">
                üîó Share Course
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function enrollInCourse() {
        alert("Enrollment feature coming soon!");
        // Future implementation: enroll user in the course
      }

      function shareCourse() {
        const courseUrl = window.location.href;
        if (navigator.share) {
          navigator.share({
            title: "<%= course.courseCode %> - <%= course.courseName %>",
            text: "Check out this course: <%= course.courseName %>",
            url: courseUrl,
          });
        } else {
          navigator.clipboard.writeText(courseUrl).then(() => {
            alert("Course link copied to clipboard!");
          });
        }
      }

      // Tab functionality
      document.addEventListener("DOMContentLoaded", function () {
        const tabs = document.querySelectorAll(".tab");
        const tabContents = document.querySelectorAll(".tab-content");

        tabs.forEach((tab) => {
          tab.addEventListener("click", () => {
            const tabId = tab.getAttribute("data-tab");

            // Remove active class from all tabs and contents
            tabs.forEach((t) => t.classList.remove("active"));
            tabContents.forEach((content) =>
              content.classList.remove("active")
            );

            // Add active class to clicked tab and corresponding content
            tab.classList.add("active");
            document.getElementById(tabId).classList.add("active");
          });
        });

        // Chat functionality
        const chatInput = document.getElementById("chat-input-field");
        const sendButton = document.getElementById("send-message");
        const chatMessages = document.querySelector(".chat-messages");

        function sendMessage() {
          const message = chatInput.value.trim();
          if (message) {
            const messageElement = document.createElement("div");
            messageElement.className = "chat-message own";
            messageElement.innerHTML = `
              <div class="message-sender">You</div>
              <div class="message-bubble">${message}</div>
              <div class="message-time">${new Date().toLocaleTimeString([], {
                hour: "2-digit",
                minute: "2-digit",
              })}</div>
            `;
            chatMessages.appendChild(messageElement);
            chatInput.value = "";
            chatMessages.scrollTop = chatMessages.scrollHeight;
          }
        }

        sendButton.addEventListener("click", sendMessage);
        chatInput.addEventListener("keypress", function (e) {
          if (e.key === "Enter") {
            sendMessage();
          }
        });
      });

      // Post creation
      document
        .getElementById("create-post-form")
        ?.addEventListener("submit", async (e) => {
          e.preventDefault();

          const content = document.getElementById("post-content").value.trim();
          const postType = document.getElementById("post-type").value;

          if (!content) {
            alert("Please enter post content");
            return;
          }

          try {
            const response = await fetch(
              `/universities/<%= university._id %>/faculties/<%= facultyIndex %>/courses/<%= courseIndex %>/posts`,
              {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({ content, postType }),
              }
            );

            if (response.ok) {
              location.reload(); // Refresh to show new post
            } else {
              const error = await response.json();
              alert(error.error);
            }
          } catch (error) {
            console.error("Error creating post:", error);
            alert("Failed to create post");
          }
        });

      // Like functionality
      document.addEventListener("click", async (e) => {
        if (e.target.closest(".like-btn")) {
          const likeBtn = e.target.closest(".like-btn");
          const postItem = likeBtn.closest(".post-item");
          const postIndex = postItem.dataset.postIndex;

          try {
            const response = await fetch(
              `/universities/<%= university._id %>/faculties/<%= facultyIndex %>/courses/<%= courseIndex %>/posts/${postIndex}/like`,
              {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
              }
            );

            if (response.ok) {
              const result = await response.json();
              const likeCount = likeBtn.querySelector(".like-count");
              likeCount.textContent = result.likesCount;

              if (result.isLiked) {
                likeBtn.classList.add("liked");
                likeBtn.style.color = "#e74c3c";
              } else {
                likeBtn.classList.remove("liked");
                likeBtn.style.color = "#666";
              }
            }
          } catch (error) {
            console.error("Error liking post:", error);
          }
        }
      });

      // Comment toggle
      document.addEventListener("click", (e) => {
        if (e.target.closest(".comment-toggle-btn")) {
          const commentBtn = e.target.closest(".comment-toggle-btn");
          const commentsSection = commentBtn
            .closest(".post-item")
            .querySelector(".comments-section");
          commentsSection.style.display =
            commentsSection.style.display === "none" ? "block" : "none";
        }
      });

      // Add comment
      document.addEventListener("submit", async (e) => {
        if (e.target.closest(".add-comment-form")) {
          e.preventDefault();

          const form = e.target.closest(".add-comment-form");
          const commentInput = form.querySelector(".comment-input");
          const content = commentInput.value.trim();
          const postItem = form.closest(".post-item");
          const postIndex = postItem.dataset.postIndex;

          if (!content) {
            alert("Please enter a comment");
            return;
          }

          try {
            const response = await fetch(
              `/universities/<%= university._id %>/faculties/<%= facultyIndex %>/courses/<%= courseIndex %>/posts/${postIndex}/comments`,
              {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({ content }),
              }
            );

            if (response.ok) {
              location.reload(); // Refresh to show new comment
            } else {
              const error = await response.json();
              alert(error.error);
            }
          } catch (error) {
            console.error("Error adding comment:", error);
            alert("Failed to add comment");
          }
        }
      });
    </script>
  </body>
</html>
