<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/universityStyle/courseDetailsStyle.css" />
    <style>
      /* Additional styles for enrollment */
      .btn-success {
        background-color: #27ae60;
        color: white;
        border: none;
      }

      .btn-success:hover {
        background-color: #219653;
      }

      .btn-danger {
        background-color: #e74c3c;
        color: white;
        border: none;
      }

      .btn-danger:hover {
        background-color: #c0392b;
      }

      .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
      }

      .modal-content {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        max-width: 500px;
        width: 90%;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Header Section -->
      <div class="header">
        <div class="breadcrumb">
          <a href="/universities/<%= university._id %>">University</a>
          <span>‚Ä∫</span>
          <a
            href="/universities/<%= university._id %>/faculties/<%= facultyIndex %>/courses?name=<%= encodeURIComponent(faculty.name) %>"
            ><%= faculty.name %></a
          >
          <span>‚Ä∫</span>
          <span><%= course.courseCode %></span>
        </div>

        <div class="course-header">
          <div class="course-code"><%= course.courseCode %></div>
          <h1 class="course-title"><%= course.courseName %></h1>
          <p class="faculty-name"><%= faculty.name %></p>
          <p class="university-name"><%= university.name %></p>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
          <div class="stat-card">
            <span class="stat-number"><%= course.level %></span>
            <span class="stat-label">Course Level</span>
          </div>
          <div class="stat-card">
            <span class="stat-number"><%= course.credits || 3 %></span>
            <span class="stat-label">Credits</span>
          </div>
          <div class="stat-card">
            <span class="stat-number"
              ><%= course.classrooms ? course.classrooms.length : 0 %></span
            >
            <span class="stat-label">Classrooms</span>
          </div>
          <div class="stat-card">
            <span class="stat-number" id="total-course-students">
              <%= course.enrolledStudents ? course.enrolledStudents.length : 0
              %>
            </span>
            <span class="stat-label">Enrolled Students</span>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="content-grid">
        <div class="main-content">
          <!-- Tabs Section -->
          <div class="info-card">
            <h2 class="card-title">Course Activities</h2>
            <div class="tabs-container">
              <div class="tabs-header">
                <button class="tab active" data-tab="timeline">
                  üìÖ Timeline
                </button>
                <button class="tab" data-tab="chat">üí¨ Chat</button>
                <button class="tab" data-tab="classroom">üè´ Classroom</button>
                <button class="tab" data-tab="enrollment">üë• Enrollment</button>
                <button class="tab" data-tab="missions">üéØ Missions</button>
              </div>

              <!-- Timeline Tab Content -->
              <div class="tab-content active" id="timeline">
                <!-- Post Creation Form (Visible to Teacher Only) -->
                <% if (user._id === course.teacher.toString()) { %>
                <div class="post-creation-form" style="margin-bottom: 2rem">
                  <div class="info-card">
                    <h3 style="margin-bottom: 1rem">Create New Post</h3>
                    <form id="create-post-form">
                      <div style="margin-bottom: 1rem">
                        <select
                          name="postType"
                          id="post-type"
                          style="
                            padding: 0.5rem;
                            border: 1px solid #e9ecef;
                            border-radius: 4px;
                            margin-bottom: 1rem;
                          "
                        >
                          <option value="announcement">üì¢ Announcement</option>
                          <option value="assignment">üìù Assignment</option>
                          <option value="material">üìö Material</option>
                          <option value="general">üí¨ General</option>
                        </select>
                      </div>
                      <textarea
                        id="post-content"
                        placeholder="What's new in your course?"
                        rows="3"
                        style="
                          width: 100%;
                          padding: 0.75rem;
                          border: 1px solid #e9ecef;
                          border-radius: 8px;
                          resize: vertical;
                          font-family: inherit;
                        "
                      ></textarea>
                      <button
                        type="submit"
                        style="
                          margin-top: 0.5rem;
                          padding: 0.5rem 1.5rem;
                          background-color: #4a90e2;
                          color: white;
                          border: none;
                          border-radius: 6px;
                          cursor: pointer;
                        "
                      >
                        Post
                      </button>
                    </form>
                  </div>
                </div>
                <% } %>

                <!-- Posts Timeline -->
                <div class="timeline" id="course-timeline">
                  <% if (course.posts && course.posts.length > 0) { %> <%
                  course.posts.forEach((post, index) => { %>
                  <div
                    class="timeline-item post-item"
                    data-post-index="<%= index %>"
                  >
                    <div class="timeline-date">
                      <%= new Date(post.createdAt).toLocaleDateString() %> at
                      <%= new Date(post.createdAt).toLocaleTimeString([], {hour:
                      '2-digit', minute:'2-digit'}) %> <% if (post.postType ===
                      'announcement') { %> ‚Ä¢ üì¢ Announcement <% } %> <% if
                      (post.postType === 'assignment') { %> ‚Ä¢ üìù Assignment <% }
                      %> <% if (post.postType === 'material') { %> ‚Ä¢ üìö Material
                      <% } %>
                    </div>
                    <div class="timeline-title">
                      <%= post.authorName %> <% if (post.author.toString() ===
                      course.teacher.toString()) { %>
                      <span style="color: #4a90e2; font-size: 0.8rem"
                        >(Teacher)</span
                      >
                      <% } %>
                    </div>
                    <div class="timeline-description"><%= post.content %></div>

                    <!-- Post Actions -->
                    <div
                      class="post-actions"
                      style="
                        margin-top: 1rem;
                        display: flex;
                        gap: 1rem;
                        align-items: center;
                      "
                    >
                      <!-- Like Button -->
                      <button
                        class="like-btn <%= post.likes.some(like => like.user.toString() === user._id) ? 'liked' : '' %>"
                        style="
                          background: none;
                          border: none;
                          cursor: pointer;
                          color: #666;
                          display: flex;
                          align-items: center;
                          gap: 0.25rem;
                        "
                      >
                        ‚ù§Ô∏è
                        <span class="like-count"><%= post.likes.length %></span>
                      </button>

                      <!-- Comment Toggle -->
                      <button
                        class="comment-toggle-btn"
                        style="
                          background: none;
                          border: none;
                          cursor: pointer;
                          color: #666;
                          display: flex;
                          align-items: center;
                          gap: 0.25rem;
                        "
                      >
                        üí¨
                        <span class="comment-count"
                          ><%= post.comments.length %></span
                        >
                      </button>
                    </div>

                    <!-- Comments Section -->
                    <div
                      class="comments-section"
                      style="display: none; margin-top: 1rem"
                    >
                      <!-- Comments List -->
                      <div class="comments-list" style="margin-bottom: 1rem">
                        <% post.comments.forEach(comment => { %>
                        <div
                          class="comment-item"
                          style="
                            padding: 0.75rem;
                            background: #f8f9fa;
                            border-radius: 8px;
                            margin-bottom: 0.5rem;
                          "
                        >
                          <div
                            style="
                              font-weight: 600;
                              color: #2c3e50;
                              font-size: 0.9rem;
                            "
                          >
                            <%= comment.authorName %>
                          </div>
                          <div style="color: #666; margin: 0.25rem 0">
                            <%= comment.content %>
                          </div>
                          <div style="font-size: 0.75rem; color: #999">
                            <%= new Date(comment.createdAt).toLocaleDateString()
                            %>
                          </div>
                        </div>
                        <% }) %>
                      </div>

                      <!-- Add Comment Form -->
                      <form
                        class="add-comment-form"
                        style="display: flex; gap: 0.5rem"
                      >
                        <input
                          type="text"
                          placeholder="Write a comment..."
                          class="comment-input"
                          style="
                            flex: 1;
                            padding: 0.5rem;
                            border: 1px solid #e9ecef;
                            border-radius: 20px;
                          "
                          required
                        />
                        <button
                          type="submit"
                          style="
                            padding: 0.5rem 1rem;
                            background-color: #4a90e2;
                            color: white;
                            border: none;
                            border-radius: 20px;
                            cursor: pointer;
                          "
                        >
                          Post
                        </button>
                      </form>
                    </div>
                  </div>
                  <% }) %> <% } else { %>
                  <div
                    class="no-posts"
                    style="text-align: center; padding: 2rem; color: #666"
                  >
                    <div style="font-size: 3rem; margin-bottom: 1rem">üìù</div>
                    <h3>No posts yet</h3>
                    <p>Be the first to share something in this course!</p>
                  </div>
                  <% } %>
                </div>
              </div>

              <!-- Chat Tab Content -->
              <div class="tab-content" id="chat">
                <div class="chat-container">
                  <div class="chat-messages">
                    <div class="chat-message">
                      <div class="message-sender">Professor Smith</div>
                      <div class="message-bubble">
                        Welcome everyone to the course chat! Feel free to ask
                        questions here.
                      </div>
                      <div class="message-time">10:15 AM</div>
                    </div>
                    <div class="chat-message">
                      <div class="message-sender">Sarah Johnson</div>
                      <div class="message-bubble">
                        Hi Professor, when is the first assignment due?
                      </div>
                      <div class="message-time">10:22 AM</div>
                    </div>
                    <div class="chat-message">
                      <div class="message-sender">Professor Smith</div>
                      <div class="message-bubble">
                        The first assignment is due next Friday at 11:59 PM.
                      </div>
                      <div class="message-time">10:25 AM</div>
                    </div>
                    <div class="chat-message own">
                      <div class="message-sender">You</div>
                      <div class="message-bubble">
                        Thanks for the clarification!
                      </div>
                      <div class="message-time">10:28 AM</div>
                    </div>
                  </div>
                  <div class="chat-input">
                    <input
                      type="text"
                      placeholder="Type your message..."
                      id="chat-input-field"
                    />
                    <button id="send-message">Send</button>
                  </div>
                </div>
              </div>

              <!-- Classroom Tab Content -->
              <div class="tab-content" id="classroom">
                <div class="classroom-management">
                  <!-- Add Classroom Button (Teacher Only) -->
                  <% if (user._id === course.teacher.toString()) { %>
                  <div style="margin-bottom: 1.5rem">
                    <button
                      id="add-classroom-btn"
                      style="
                        padding: 0.75rem 1.5rem;
                        background-color: #4a90e2;
                        color: white;
                        border: none;
                        border-radius: 6px;
                        cursor: pointer;
                        font-size: 1rem;
                      "
                    >
                      üè´ Add New Classroom
                    </button>
                  </div>
                  <% } %>

                  <!-- Classrooms List -->
                  <% if (course.classrooms && course.classrooms.length > 0) { %>
                  <div class="classrooms-grid" id="classrooms-grid">
                    <% course.classrooms.forEach((classroom, index) => { %>
                    <div
                      class="classroom-card"
                      data-classroom-index="<%= index %>"
                    >
                      <div class="classroom-header">
                        <div class="classroom-name">
                          <strong><%= classroom.name %></strong>
                        </div>
                        <% if (classroom.section) { %>
                        <span class="classroom-section"
                          >Section <%= classroom.section %></span
                        >
                        <% } %>
                      </div>

                      <% if (classroom.schedule) { %>
                      <div class="classroom-schedule">
                        <div class="schedule-item">
                          <span class="schedule-label">üìÖ Day:</span>
                          <span class="schedule-value"
                            ><%= classroom.schedule.day %></span
                          >
                        </div>
                        <div class="schedule-item">
                          <span class="schedule-label">‚è∞ Time:</span>
                          <span class="schedule-value"
                            ><%= classroom.schedule.time %></span
                          >
                        </div>
                        <% if (classroom.schedule.location) { %>
                        <div class="schedule-item">
                          <span class="schedule-label">üìç Location:</span>
                          <span class="schedule-value"
                            ><%= classroom.schedule.location %></span
                          >
                        </div>
                        <% } %>
                      </div>
                      <% } %>

                      <div class="classroom-stats">
                        <div class="stat-item">
                          <span class="stat-label">Students:</span>
                          <span class="stat-value"
                            ><%= classroom.students ? classroom.students.length
                            : 0 %></span
                          >
                        </div>
                        <% if (classroom.xp && classroom.xp > 0) { %>
                        <div class="stat-item">
                          <span class="stat-label">XP:</span>
                          <span class="stat-value"><%= classroom.xp %></span>
                        </div>
                        <div class="stat-item">
                          <span class="stat-label">Level:</span>
                          <span class="stat-value"
                            ><%= classroom.level || 1 %></span
                          >
                        </div>
                        <% } %>
                      </div>

                      <div class="classroom-actions">
                        <button
                          class="classroom-action-btn join-btn"
                          onclick="enrollInClassroom('<%= index %>')"
                        >
                          üöÄ Join Classroom
                        </button>
                        <% if (user._id === course.teacher.toString()) { %>
                        <button
                          class="classroom-action-btn manage-btn"
                          onclick="manageClassroom('<%= index %>')"
                        >
                          ‚öôÔ∏è Manage
                        </button>
                        <% } %>
                      </div>
                    </div>
                    <% }) %>
                  </div>
                  <% } else { %>
                  <div class="no-classrooms">
                    <div class="no-classrooms-icon">üè´</div>
                    <h3>No Classrooms Available</h3>
                    <p>This course doesn't have any classrooms yet.</p>
                    <% if (user._id === course.teacher.toString()) { %>
                    <p>
                      Click "Add New Classroom" to create the first classroom
                      for this course.
                    </p>
                    <% } %>
                  </div>
                  <% } %>
                </div>
              </div>

              <!-- Enrollment Tab Content -->
              <div class="tab-content" id="enrollment">
                <div class="enrollment-section">
                  <% if (user._id === course.teacher.toString() || (isMember &&
                  user._id !== course.teacher.toString())) { %>
                  <div class="info-card" style="margin-bottom: 2rem">
                    <h3 style="margin-bottom: 1rem" id="enrollment-title">
                      <% if (user._id === course.teacher.toString()) { %> Manage
                      Course Enrollment <% } else { %> Course Enrollment <% } %>
                    </h3>

                    <p
                      style="color: #666; margin-bottom: 1.5rem"
                      id="enrollment-description"
                    >
                      <!-- Description will be set by JavaScript -->
                    </p>

                    <% if (!isMember) { %>
                    <div
                      class="alert alert-warning"
                      style="
                        padding: 1rem;
                        background-color: #fff3cd;
                        border: 1px solid #ffeaa7;
                        border-radius: 4px;
                        margin-bottom: 1rem;
                      "
                    >
                      ‚ö†Ô∏è You must be a member of <%= university.name %> to
                      enroll in this course.
                    </div>
                    <% } %>
                  </div>

                  <!-- Available Classrooms for Enrollment -->
                  <div class="info-card">
                    <h4 style="margin-bottom: 1rem">Available Classrooms</h4>
                    <div id="classrooms-list-container">
                      <!-- Classrooms will be loaded by JavaScript -->
                    </div>
                  </div>

                  <!-- Enrollment Stats (Teacher Only) -->
                  <div
                    class="info-card"
                    id="enrollment-stats"
                    style="display: none"
                  >
                    <h4 style="margin-bottom: 1rem">Enrollment Statistics</h4>
                    <div
                      class="stats-grid-small"
                      style="
                        display: grid;
                        grid-template-columns: repeat(
                          auto-fit,
                          minmax(200px, 1fr)
                        );
                        gap: 1rem;
                        margin-bottom: 1.5rem;
                      "
                    >
                      <div
                        style="
                          text-align: center;
                          padding: 1rem;
                          background: #f8f9fa;
                          border-radius: 8px;
                        "
                      >
                        <div
                          style="
                            font-size: 2rem;
                            font-weight: 700;
                            color: #4a90e2;
                          "
                          id="total-students-stat"
                        >
                          0
                        </div>
                        <div style="color: #666">Total Students</div>
                      </div>
                      <div
                        style="
                          text-align: center;
                          padding: 1rem;
                          background: #f8f9fa;
                          border-radius: 8px;
                        "
                      >
                        <div
                          style="
                            font-size: 2rem;
                            font-weight: 700;
                            color: #27ae60;
                          "
                          id="total-classrooms-stat"
                        >
                          0
                        </div>
                        <div style="color: #666">Classrooms</div>
                      </div>
                      <div
                        style="
                          text-align: center;
                          padding: 1rem;
                          background: #f8f9fa;
                          border-radius: 8px;
                        "
                      >
                        <div
                          style="
                            font-size: 2rem;
                            font-weight: 700;
                            color: #e74c3c;
                          "
                          id="avg-students-stat"
                        >
                          0
                        </div>
                        <div style="color: #666">Avg per Classroom</div>
                      </div>
                    </div>
                  </div>
                  <% } else { %>
                  <div
                    class="info-card"
                    style="text-align: center; padding: 3rem"
                  >
                    <div style="font-size: 4rem; margin-bottom: 1rem">üîí</div>
                    <h3>Enrollment Restricted</h3>
                    <p style="color: #666; margin-bottom: 1.5rem">
                      You need to be a member of <%= university.name %> to
                      enroll in this course.
                    </p>
                    <a
                      href="/universities/<%= university._id %>"
                      class="btn btn-primary"
                      style="padding: 0.75rem 1.5rem"
                    >
                      Join University First
                    </a>
                  </div>
                  <% } %>
                </div>
              </div>

              <!-- Missions Tab Content -->
              <div class="tab-content" id="missions">
                <div class="missions-list">
                  <div class="mission-card">
                    <div class="mission-header">
                      <div class="mission-title">Complete Assignment 1</div>
                      <div class="mission-status in-progress">In Progress</div>
                    </div>
                    <div class="mission-description">
                      Submit the first programming assignment covering basic
                      algorithms and data structures.
                    </div>
                    <div class="mission-details">
                      <div class="mission-xp">‚≠ê 150 XP</div>
                      <div class="mission-deadline">üìÖ Due: Oct 15, 2023</div>
                    </div>
                    <div class="mission-progress">
                      <div class="progress-bar">
                        <div class="progress-fill" style="width: 65%"></div>
                      </div>
                      <div class="progress-text">65% complete</div>
                    </div>
                  </div>
                  <div class="mission-card">
                    <div class="mission-header">
                      <div class="mission-title">Watch Week 3 Lectures</div>
                      <div class="mission-status completed">Completed</div>
                    </div>
                    <div class="mission-description">
                      Complete all video lectures and supplementary materials
                      for Week 3.
                    </div>
                    <div class="mission-details">
                      <div class="mission-xp">‚≠ê 50 XP</div>
                      <div class="mission-deadline">üìÖ Due: Oct 10, 2023</div>
                    </div>
                    <div class="mission-progress">
                      <div class="progress-bar">
                        <div class="progress-fill" style="width: 100%"></div>
                      </div>
                      <div class="progress-text">100% complete</div>
                    </div>
                  </div>
                  <div class="mission-card">
                    <div class="mission-header">
                      <div class="mission-title">
                        Participate in Discussion Forum
                      </div>
                      <div class="mission-status not-started">Not Started</div>
                    </div>
                    <div class="mission-description">
                      Post at least 3 meaningful contributions to the Week 4
                      discussion forum.
                    </div>
                    <div class="mission-details">
                      <div class="mission-xp">‚≠ê 75 XP</div>
                      <div class="mission-deadline">üìÖ Due: Oct 20, 2023</div>
                    </div>
                    <div class="mission-progress">
                      <div class="progress-bar">
                        <div class="progress-fill" style="width: 0%"></div>
                      </div>
                      <div class="progress-text">0% complete</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="sidebar">
          <!-- Course Information -->
          <div class="info-card">
            <h2 class="card-title">Course Information</h2>
            <div class="course-meta-grid">
              <div class="meta-item">
                <div class="meta-label">Course Code</div>
                <div class="meta-value"><%= course.courseCode %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Level</div>
                <div class="meta-value"><%= course.level %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Credits</div>
                <div class="meta-value"><%= course.credits || 3 %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Students</div>
                <div class="meta-value" id="sidebar-student-count">
                  <%= course.enrolledStudents ? course.enrolledStudents.length :
                  0 %>
                </div>
              </div>
            </div>
          </div>

          <!-- Teacher Information -->
          <div class="info-card">
            <h2 class="card-title">Course Teacher</h2>
            <div class="teacher-info">
              <div class="teacher-avatar">
                <%= user.fullName ? user.fullName.charAt(0).toUpperCase() : 'T'
                %>
              </div>
              <div class="teacher-details">
                <div class="teacher-name">
                  <%= user.fullName || 'Teacher' %>
                </div>
                <div class="teacher-role">Course Instructor</div>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="info-card">
            <h2 class="card-title">Actions</h2>
            <div class="action-buttons">
              <% if (user._id !== course.teacher.toString()) { %> <% if
              (course.enrolledStudents && course.enrolledStudents.some(s =>
              s.toString() === user._id)) { %>
              <button class="btn btn-success" id="enroll-course-btn" disabled>
                ‚úÖ Enrolled in Course
              </button>
              <button class="btn btn-danger" onclick="leaveCourse()">
                üö´ Leave Course
              </button>
              <% } else { %>
              <button
                class="btn btn-primary"
                id="enroll-course-btn"
                onclick="enrollInCourse()"
              >
                üìö Enroll in Course
              </button>
              <% } %> <% } else { %>
              <button class="btn btn-primary" disabled>
                üë®‚Äçüè´ You are the Teacher
              </button>
              <% } %>
              <button class="btn btn-outline" onclick="shareCourse()">
                üîó Share Course
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Enrollment Success Modal -->
    <div id="enrollment-success-modal" style="display: none"></div>

    <script>
      // Store data from server - CORRECTED VERSION
      const courseData = {
        universityId: "<%= university._id %>",
        universityName: "<%= university.name %>",
        facultyIndex: "<%= facultyIndex %>",
        courseIndex: "<%= courseIndex %>",
        course: JSON.parse('<%- JSON.stringify(course).replace(/\\/g, "\\\\").replace(/'/g, "\\'") %>'),
        user: JSON.parse('<%- JSON.stringify(user).replace(/\\/g, "\\\\").replace(/'/g, "\\'") %>'),
        isMember: <%= isMember %>,
        isTeacher: <%= user._id === course.teacher.toString() %>,
        isEnrolledInCourse: <%= course.enrolledStudents ? course.enrolledStudents.some(s => s.toString() === user._id) : false %>
      };

      // Debug: Check course data
      console.log("Course Data:", courseData);

      // Course Enrollment Function
      async function enrollInCourse() {
        // Check if user is logged in
        if (!courseData.user || !courseData.user._id) {
          alert("Please log in to enroll in this course.");
          return;
        }

        // Check if user is a university member
        if (!courseData.isMember) {
          alert(`You must be a member of ${courseData.universityName} to enroll in this course.`);
          window.location.href = `/universities/${courseData.universityId}`;
          return;
        }

        // Check if user is the teacher
        if (courseData.isTeacher) {
          alert("Teachers cannot enroll as students in their own course.");
          return;
        }

        // Check if already enrolled
        if (courseData.isEnrolledInCourse) {
          alert("You are already enrolled in this course!");
          return;
        }

        const confirmation = confirm(
          `Enroll in ${courseData.course.courseCode} - ${courseData.course.courseName}?\n\n` +
          `You'll gain access to course materials, announcements, and activities.`
        );

        if (!confirmation) return;

        try {
          // Show loading state
          const enrollBtn = document.getElementById('enroll-course-btn');
          if (enrollBtn) {
            enrollBtn.disabled = true;
            enrollBtn.textContent = 'Enrolling...';
          }

          const response = await fetch(
            `/universities/${courseData.universityId}/faculties/${courseData.facultyIndex}/courses/${courseData.courseIndex}/enroll-course`,
            {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              }
            }
          );

          const result = await response.json();

          if (response.ok) {
            // Success
            alert(result.message || "Successfully enrolled in course!");

            // Update UI
            updateCourseEnrollmentUI(true, result.enrolledStudents);

            // Show success modal
            showEnrollmentSuccessModal();

          } else {
            // Error
            alert(result.error || "Failed to enroll in course");

            // Reset button
            if (enrollBtn) {
              enrollBtn.disabled = false;
              enrollBtn.textContent = 'üìö Enroll in Course';
            }
          }
        } catch (error) {
          console.error("Error enrolling in course:", error);
          alert("Failed to enroll in course. Please try again.");

          // Reset button
          const enrollBtn = document.getElementById('enroll-course-btn');
          if (enrollBtn) {
            enrollBtn.disabled = false;
            enrollBtn.textContent = 'üìö Enroll in Course';
          }
        }
      }

      // Leave Course Function
      async function leaveCourse() {
        const confirmation = confirm(
          "Are you sure you want to leave this course?\n\n" +
          "You will lose access to all course materials and will be removed from all classrooms."
        );

        if (!confirmation) return;

        try {
          const response = await fetch(
            `/universities/${courseData.universityId}/faculties/${courseData.facultyIndex}/courses/${courseData.courseIndex}/leave-course`,
            {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              }
            }
          );

          const result = await response.json();

          if (response.ok) {
            alert(result.message || "Successfully left the course");
            location.reload(); // Reload the page to reflect changes
          } else {
            alert(result.error || "Failed to leave course");
          }
        } catch (error) {
          console.error("Error leaving course:", error);
          alert("Failed to leave course. Please try again.");
        }
      }

      // Update UI after enrollment
      function updateCourseEnrollmentUI(isEnrolled, newCount) {
        // Update enrollment button
        const enrollBtn = document.getElementById('enroll-course-btn');
        if (enrollBtn) {
          if (isEnrolled) {
            enrollBtn.className = "btn btn-success";
            enrollBtn.innerHTML = "‚úÖ Enrolled in Course";
            enrollBtn.disabled = true;

            // Remove the enroll button onclick and add leave button
            const actionsDiv = enrollBtn.parentNode;

            // Create leave button
            const leaveBtn = document.createElement('button');
            leaveBtn.className = "btn btn-danger";
            leaveBtn.innerHTML = "üö´ Leave Course";
            leaveBtn.onclick = leaveCourse;
            leaveBtn.style.marginTop = "0.5rem";

            actionsDiv.appendChild(leaveBtn);
          }
        }

        // Update student count in stats
        const totalStudentsElement = document.getElementById('total-course-students');
        const sidebarStudentCount = document.getElementById('sidebar-student-count');

        if (totalStudentsElement) {
          totalStudentsElement.textContent = newCount || (parseInt(totalStudentsElement.textContent) + 1);
        }

        if (sidebarStudentCount) {
          sidebarStudentCount.textContent = newCount || (parseInt(sidebarStudentCount.textContent) + 1);
        }

        // Update courseData
        courseData.isEnrolledInCourse = isEnrolled;
      }

      // Show enrollment success modal
      function showEnrollmentSuccessModal() {
        const modalHtml = `
          <div class="modal-overlay">
            <div class="modal-content">
              <div style="font-size: 4rem; margin-bottom: 1rem">üéâ</div>
              <h2 style="margin-bottom: 1rem">Welcome to the Course!</h2>
              <p style="color: #666; margin-bottom: 1.5rem">
                You've successfully enrolled in <strong>${courseData.course.courseCode} - ${courseData.course.courseName}</strong>.
              </p>

              <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin-bottom: 1.5rem">
                <h4 style="margin-bottom: 1rem">Next Steps:</h4>
                <ul style="text-align: left; color: #666; list-style-type: none; padding-left: 0;">
                  <li style="margin-bottom: 0.5rem; display: flex; align-items: center;">
                    <span style="font-size: 1.2rem; margin-right: 0.5rem">üìö</span>
                    <span>Access course materials in the Timeline tab</span>
                  </li>
                  <li style="margin-bottom: 0.5rem; display: flex; align-items: center;">
                    <span style="font-size: 1.2rem; margin-right: 0.5rem">üè´</span>
                    <span>Join a classroom to attend live sessions</span>
                  </li>
                  <li style="margin-bottom: 0.5rem; display: flex; align-items: center;">
                    <span style="font-size: 1.2rem; margin-right: 0.5rem">üìù</span>
                    <span>Check assignments and deadlines</span>
                  </li>
                  <li style="display: flex; align-items: center;">
                    <span style="font-size: 1.2rem; margin-right: 0.5rem">üí¨</span>
                    <span>Participate in course discussions</span>
                  </li>
                </ul>
              </div>

              <button onclick="closeEnrollmentSuccessModal()" style="
                padding: 0.75rem 2rem;
                background-color: #4a90e2;
                color: white;
                border: none;
                border-radius: 6px;
                cursor: pointer;
                font-size: 1rem;
              ">
                Continue to Course
              </button>
            </div>
          </div>
        `;

        const modalElement = document.getElementById('enrollment-success-modal');
        modalElement.innerHTML = modalHtml;
        modalElement.style.display = 'block';
      }

      function closeEnrollmentSuccessModal() {
        const modal = document.getElementById('enrollment-success-modal');
        modal.style.display = 'none';
        modal.innerHTML = '';
      }

      // Initialize enrollment page
      document.addEventListener("DOMContentLoaded", function () {
        initializeEnrollmentTab();

        // Set initial button state
        if (courseData.isEnrolledInCourse && !courseData.isTeacher) {
          const enrollBtn = document.getElementById('enroll-course-btn');
          if (enrollBtn) {
            enrollBtn.className = "btn btn-success";
            enrollBtn.innerHTML = "‚úÖ Enrolled in Course";
            enrollBtn.disabled = true;
          }
        }
      });

      function initializeEnrollmentTab() {
        // Set description based on user role
        const description = document.getElementById("enrollment-description");
        if (courseData.isTeacher) {
          description.textContent =
            "Manage students enrolled in this course. You can add students to specific classrooms or view enrollment status.";
        } else {
          description.textContent =
            "Enroll in this course to access all materials and activities. Once enrolled, you can join specific classrooms.";
        }

        // Load classrooms
        loadClassrooms();

        // Show enrollment stats for teachers
        if (courseData.isTeacher) {
          document.getElementById("enrollment-stats").style.display = "block";
          updateEnrollmentStats();
        }
      }

      function loadClassrooms() {
        const container = document.getElementById("classrooms-list-container");

        if (
          !courseData.course.classrooms ||
          courseData.course.classrooms.length === 0
        ) {
          container.innerHTML = `
            <div style="text-align: center; padding: 2rem; color: #666">
              <div style="font-size: 3rem; margin-bottom: 1rem">üè´</div>
              <h4>No Classrooms Available</h4>
              <p>There are no classrooms available for enrollment.</p>
              ${
                courseData.isTeacher
                  ? '<button id="create-classroom-for-enrollment" class="btn btn-primary" style="margin-top: 1rem">Create First Classroom</button>'
                  : ""
              }
            </div>
          `;

          // Add event listener for create classroom button
          const createBtn = document.getElementById(
            "create-classroom-for-enrollment"
          );
          if (createBtn) {
            createBtn.addEventListener("click", function () {
              const addClassroomBtn =
                document.getElementById("add-classroom-btn");
              if (addClassroomBtn) addClassroomBtn.click();
            });
          }
          return;
        }

        let html = '<div class="classrooms-list">';

        courseData.course.classrooms.forEach((classroom, index) => {
          const isEnrolled = isUserEnrolledInClassroom(classroom);

          html += `
            <div class="classroom-enrollment-card" style="
              padding: 1rem;
              border: 1px solid #e9ecef;
              border-radius: 8px;
              margin-bottom: 1rem;
              background: ${isEnrolled ? "#f0fff4" : "white"};
            ">
              <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem">
                <div>
                  <strong>${classroom.name}</strong>
                  ${
                    classroom.section
                      ? `<span style="color: #666; margin-left: 0.5rem">(Section ${classroom.section})</span>`
                      : ""
                  }
                </div>
                <span style="font-size: 0.9rem; color: #666">
                  ${classroom.students ? classroom.students.length : 0} students
                </span>
              </div>

              ${
                classroom.schedule
                  ? `
                <div style="margin-bottom: 0.5rem; font-size: 0.9rem; color: #666">
                  <span>üìÖ ${classroom.schedule.day}</span>
                  <span style="margin: 0 0.5rem">‚Ä¢</span>
                  <span>‚è∞ ${classroom.schedule.time}</span>
                  ${
                    classroom.schedule.location
                      ? `<span style="margin: 0 0.5rem">‚Ä¢</span><span>üìç ${classroom.schedule.location}</span>`
                      : ""
                  }
                </div>
              `
                  : ""
              }

              <div>
                ${
                  courseData.isTeacher
                    ? `
                  <div style="display: flex; gap: 1rem; margin-top: 1rem">
                    <button class="btn btn-outline" onclick="viewClassroomStudents(${index})" style="padding: 0.5rem 1rem">
                      üë• View Students
                    </button>
                    <button class="btn btn-primary" onclick="addStudentToClassroom(${index})" style="padding: 0.5rem 1rem">
                      ‚ûï Add Student
                    </button>
                  </div>
                `
                    : courseData.isEnrolledInCourse &&
                      !courseData.isTeacher &&
                      !isEnrolled
                    ? `
                  <button class="btn btn-primary" onclick="enrollInClassroom(${index})" style="padding: 0.5rem 1.5rem; margin-top: 0.5rem">
                    üöÄ Enroll in this Classroom
                  </button>
                `
                    : isEnrolled
                    ? `
                  <div style="display: flex; align-items: center; gap: 0.5rem; margin-top: 0.5rem">
                    <span style="color: #27ae60; font-weight: 600">‚úÖ Enrolled</span>
                    <button class="btn btn-outline" onclick="leaveClassroom(${index})" style="padding: 0.25rem 0.75rem; font-size: 0.9rem">
                      Leave
                    </button>
                  </div>
                `
                    : !courseData.isEnrolledInCourse
                    ? `<div style="color: #e74c3c; font-size: 0.9rem; margin-top: 0.5rem">You must enroll in the course first</div>`
                    : ""
                }
              </div>
            </div>
          `;
        });

        html += "</div>";
        container.innerHTML = html;
      }

      function isUserEnrolledInClassroom(classroom) {
        if (!classroom.students || !courseData.user._id) return false;
        return classroom.students.some(
          (student) =>
            student.student &&
            student.student.toString() === courseData.user._id
        );
      }

      function updateEnrollmentStats() {
        const classrooms = courseData.course.classrooms || [];
        const totalStudents = classrooms.reduce(
          (total, classroom) =>
            total + (classroom.students ? classroom.students.length : 0),
          0
        );
        const totalClassrooms = classrooms.length;
        const avgStudents =
          totalClassrooms > 0 ? Math.round(totalStudents / totalClassrooms) : 0;

        document.getElementById("total-students-stat").textContent =
          totalStudents;
        document.getElementById("total-classrooms-stat").textContent =
          totalClassrooms;
        document.getElementById("avg-students-stat").textContent = avgStudents;
      }

      // Enroll in classroom
      async function enrollInClassroom(classroomIndex) {
        if (!courseData.isEnrolledInCourse) {
          alert("You must enroll in the course first before joining a classroom.");
          return;
        }

        const confirmation = confirm(
          "Are you sure you want to enroll in this classroom?"
        );
        if (!confirmation) return;

        try {
          const response = await fetch(
            `/universities/${courseData.universityId}/faculties/${courseData.facultyIndex}/courses/${courseData.courseIndex}/enroll`,
            {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ classroomIndex: classroomIndex }),
            }
          );

          if (response.ok) {
            const result = await response.json();
            alert(result.message);
            location.reload();
          } else {
            const error = await response.json();
            alert(error.error || "Failed to enroll in classroom");
          }
        } catch (error) {
          console.error("Error enrolling in classroom:", error);
          alert("Failed to enroll in classroom");
        }
      }

      // Leave classroom
      async function leaveClassroom(classroomIndex) {
        const confirmation = confirm(
          "Are you sure you want to leave this classroom?"
        );
        if (!confirmation) return;

        try {
          const response = await fetch(
            `/universities/${courseData.universityId}/faculties/${courseData.facultyIndex}/courses/${courseData.courseIndex}/leave`,
            {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ classroomIndex: classroomIndex }),
            }
          );

          if (response.ok) {
            const result = await response.json();
            alert(result.message);
            location.reload();
          } else {
            const error = await response.json();
            alert(error.error || "Failed to leave classroom");
          }
        } catch (error) {
          console.error("Error leaving classroom:", error);
          alert("Failed to leave classroom");
        }
      }

      function shareCourse() {
        const courseUrl = window.location.href;
        if (navigator.share) {
          navigator.share({
            title: "<%= course.courseCode %> - <%= course.courseName %>",
            text: "Check out this course: <%= course.courseName %>",
            url: courseUrl,
          });
        } else {
          navigator.clipboard.writeText(courseUrl).then(() => {
            alert("Course link copied to clipboard!");
          });
        }
      }

      // Tab functionality
      document.addEventListener("DOMContentLoaded", function () {
        const tabs = document.querySelectorAll(".tab");
        const tabContents = document.querySelectorAll(".tab-content");

        tabs.forEach((tab) => {
          tab.addEventListener("click", () => {
            const tabId = tab.getAttribute("data-tab");

            // Remove active class from all tabs and contents
            tabs.forEach((t) => t.classList.remove("active"));
            tabContents.forEach((content) =>
              content.classList.remove("active")
            );

            // Add active class to clicked tab and corresponding content
            tab.classList.add("active");
            document.getElementById(tabId).classList.add("active");
          });
        });

        // Chat functionality
        const chatInput = document.getElementById("chat-input-field");
        const sendButton = document.getElementById("send-message");
        const chatMessages = document.querySelector(".chat-messages");

        function sendMessage() {
          const message = chatInput.value.trim();
          if (message) {
            const messageElement = document.createElement("div");
            messageElement.className = "chat-message own";
            messageElement.innerHTML = `
              <div class="message-sender">You</div>
              <div class="message-bubble">${message}</div>
              <div class="message-time">${new Date().toLocaleTimeString([], {
                hour: "2-digit",
                minute: "2-digit",
              })}</div>
            `;
            chatMessages.appendChild(messageElement);
            chatInput.value = "";
            chatMessages.scrollTop = chatMessages.scrollHeight;
          }
        }

        sendButton.addEventListener("click", sendMessage);
        chatInput.addEventListener("keypress", function (e) {
          if (e.key === "Enter") {
            sendMessage();
          }
        });
      });

      // Post creation
      document
        .getElementById("create-post-form")
        ?.addEventListener("submit", async (e) => {
          e.preventDefault();

          const content = document.getElementById("post-content").value.trim();
          const postType = document.getElementById("post-type").value;

          if (!content) {
            alert("Please enter post content");
            return;
          }

          try {
            const response = await fetch(
              `/universities/${courseData.universityId}/faculties/${courseData.facultyIndex}/courses/${courseData.courseIndex}/posts`,
              {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({ content, postType }),
              }
            );

            if (response.ok) {
              location.reload(); // Refresh to show new post
            } else {
              const error = await response.json();
              alert(error.error);
            }
          } catch (error) {
            console.error("Error creating post:", error);
            alert("Failed to create post");
          }
        });

      // Like functionality
      document.addEventListener("click", async (e) => {
        if (e.target.closest(".like-btn")) {
          const likeBtn = e.target.closest(".like-btn");
          const postItem = likeBtn.closest(".post-item");
          const postIndex = postItem.dataset.postIndex;

          try {
            const response = await fetch(
              `/universities/${courseData.universityId}/faculties/${courseData.facultyIndex}/courses/${courseData.courseIndex}/posts/${postIndex}/like`,
              {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
              }
            );

            if (response.ok) {
              const result = await response.json();
              const likeCount = likeBtn.querySelector(".like-count");
              likeCount.textContent = result.likesCount;

              if (result.isLiked) {
                likeBtn.classList.add("liked");
                likeBtn.style.color = "#e74c3c";
              } else {
                likeBtn.classList.remove("liked");
                likeBtn.style.color = "#666";
              }
            }
          } catch (error) {
            console.error("Error liking post:", error);
          }
        }
      });

      // Comment toggle
      document.addEventListener("click", (e) => {
        if (e.target.closest(".comment-toggle-btn")) {
          const commentBtn = e.target.closest(".comment-toggle-btn");
          const commentsSection = commentBtn
            .closest(".post-item")
            .querySelector(".comments-section");
          commentsSection.style.display =
            commentsSection.style.display === "none" ? "block" : "none";
        }
      });

      // Add comment
      document.addEventListener("submit", async (e) => {
        if (e.target.closest(".add-comment-form")) {
          e.preventDefault();

          const form = e.target.closest(".add-comment-form");
          const commentInput = form.querySelector(".comment-input");
          const content = commentInput.value.trim();
          const postItem = form.closest(".post-item");
          const postIndex = postItem.dataset.postIndex;

          if (!content) {
            alert("Please enter a comment");
            return;
          }

          try {
            const response = await fetch(
              `/universities/${courseData.universityId}/faculties/${courseData.facultyIndex}/courses/${courseData.courseIndex}/posts/${postIndex}/comments`,
              {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({ content }),
              }
            );

            if (response.ok) {
              location.reload(); // Refresh to show new comment
            } else {
              const error = await response.json();
              alert(error.error);
            }
          } catch (error) {
            console.error("Error adding comment:", error);
            alert("Failed to add comment");
          }
        }
      });
    </script>
  </body>
</html>
