<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Universities - Quizmize</title>
    <link rel="stylesheet" href="/universityStyle.css" />
  </head>
  <body>
    <!-- Add hidden element with user data -->
    <div id="currentUserData" style="display: none">
      <%- JSON.stringify(user) %>
    </div>

    <div class="container">
      <div class="header">Partner Universities</div>

      <!-- Success/Error Messages -->
      <div id="successMessage" class="success-message"></div>
      <div id="errorMessage" class="error-message"></div>

      <!-- Search & Filter -->
      <div class="controls">
        <input
          type="text"
          id="searchInput"
          placeholder="Search universities..."
          style="flex: 1"
        />
        <select id="filterSelect">
          <option value="all">All Locations</option>
          <option value="North America">North America</option>
          <option value="Europe">Europe</option>
          <option value="Asia">Asia</option>
          <option value="Australia">Australia</option>
          <option value="Africa">Africa</option>
          <option value="South America">South America</option>
        </select>
        <button class="btn btn-primary" onclick="applyFilters()">Search</button>
      </div>

      <!-- University Actions -->
      <div class="controls">
        <button class="btn btn-primary" onclick="openRegisterUniversityModal()">
          Register Your University
        </button>
        <button class="btn btn-outline" onclick="openJoinUniversityModal()">
          Join University with Code
        </button>
      </div>

      <!-- User's Joined Universities -->
      <div class="controls">
        <h3>My Universities</h3>
      </div>
      <div class="university-grid" id="userUniversitiesList">
        <div class="loading">Loading your universities...</div>
      </div>

      <!-- All Universities -->
      <div class="controls">
        <h3>All Partner Universities</h3>
      </div>
      <div class="university-grid" id="allUniversitiesList">
        <div class="loading">Loading universities...</div>
      </div>
    </div>

    <!-- Register University Modal -->
    <div id="registerUniversityModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">Register Your University</h3>
          <span class="close" onclick="closeRegisterUniversityModal()"
            >&times;</span
          >
        </div>
        <form id="registerUniversityForm">
          <div class="form-group">
            <label for="universityName">University Name:</label>
            <input
              type="text"
              id="universityName"
              name="name"
              required
              placeholder="Enter university name"
            />
          </div>
          <div class="form-group">
            <label for="universityLocation">Location:</label>
            <select id="universityLocation" name="location" required>
              <option value="">Select location</option>
              <option value="North America">North America</option>
              <option value="Europe">Europe</option>
              <option value="Asia">Asia</option>
              <option value="Australia">Australia</option>
              <option value="Africa">Africa</option>
              <option value="South America">South America</option>
            </select>
          </div>
          <div class="form-group">
            <label for="universityWebsite">Website:</label>
            <input
              type="url"
              id="universityWebsite"
              name="website"
              placeholder="https://example.edu"
            />
          </div>
          <div class="form-group">
            <label for="universityDescription">Description:</label>
            <textarea
              id="universityDescription"
              name="description"
              rows="3"
              placeholder="Brief description of your university"
            ></textarea>
          </div>
          <div class="modal-actions">
            <button
              type="button"
              class="btn btn-outline"
              onclick="closeRegisterUniversityModal()"
            >
              Cancel
            </button>
            <button type="submit" class="btn btn-primary">
              Register University
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Join University Modal -->
    <div id="joinUniversityModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">Join University with Code</h3>
          <span class="close" onclick="closeJoinUniversityModal()"
            >&times;</span
          >
        </div>
        <form id="joinUniversityForm">
          <div class="form-group">
            <label for="universityCode">University Code:</label>
            <input
              type="text"
              id="universityCode"
              name="code"
              required
              placeholder="Enter university code"
              maxlength="8"
              style="text-transform: uppercase"
            />
            <small
              >Enter the 8-character university code provided by your
              institution</small
            >
          </div>
          <div class="modal-actions">
            <button
              type="button"
              class="btn btn-outline"
              onclick="closeJoinUniversityModal()"
            >
              Cancel
            </button>
            <button type="submit" class="btn btn-primary">
              Join University
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      // Use relative URLs to avoid CORS issues
      const baseUrl = "/universities";
      const apiUrl = `${baseUrl}/api`;
      let universities = [];
      let currentUser = null;

      // Initialize current user from the hidden element
      function initializeCurrentUser() {
        try {
          const userElement = document.getElementById("currentUserData");
          if (userElement && userElement.textContent) {
            currentUser = JSON.parse(userElement.textContent);
            console.log("Current user initialized:", currentUser);
          } else {
            console.error("Could not find user data element");
            currentUser = { _id: null, fullName: "Guest" };
          }
        } catch (error) {
          console.error("Error parsing user data:", error);
          currentUser = { _id: null, fullName: "Guest" };
        }
      }

      // Add debug logging to isUserMember function
      function isUserMember(university) {
        if (!currentUser || !currentUser._id) {
          console.log("No current user or user ID");
          return false;
        }

        if (!university.members || !Array.isArray(university.members)) {
          console.log("University has no members array:", university.name);
          return false;
        }

        console.log(`\n=== Checking membership for ${university.name} ===`);
        console.log("User ID:", currentUser._id);
        console.log("University members:", university.members);

        const isMember = university.members.some((member) => {
          const memberUserId = member.user?._id || member.user;
          const isMatch =
            memberUserId &&
            memberUserId.toString() === currentUser._id.toString();

          if (isMatch) {
            console.log(
              `FOUND MATCH! User ${currentUser._id} is member of ${university.name}`
            );
            console.log("Member details:", member);
          }

          return isMatch;
        });

        console.log(`Final result: ${isMember ? "IS member" : "NOT member"}`);
        return isMember;
      }

      // Helper function to get user's role in a university
      function getUserRole(university) {
        if (!currentUser || !university.members) return "Non-member";

        const member = university.members.find((member) => {
          const memberUserId = member.user?._id || member.user;
          return (
            memberUserId &&
            memberUserId.toString() === currentUser._id.toString()
          );
        });

        return member ? member.role : "Non-member";
      }

      // Function to separate user's universities from all universities
      function separateUserUniversities(allUniversities) {
        const userUniversities = [];
        const otherUniversities = [];

        console.log("Separating universities for user:", currentUser._id);

        allUniversities.forEach((university, index) => {
          console.log(`University ${index + 1}: ${university.name}`);
          console.log("University members:", university.members);

          const isMember = isUserMember(university);
          console.log(`Is member: ${isMember}`);

          if (isMember) {
            userUniversities.push(university);
          } else {
            otherUniversities.push(university);
          }
        });

        console.log("User universities count:", userUniversities.length);
        console.log("Other universities count:", otherUniversities.length);

        return { userUniversities, otherUniversities };
      }

      // Function to render user's universities
      function renderUserUniversities(userUniversities) {
        const container = document.getElementById("userUniversitiesList");

        if (!userUniversities || userUniversities.length === 0) {
          container.innerHTML =
            "<p>You haven't joined any universities yet. Join your university to get started!</p>";
          return;
        }

        container.innerHTML = "";
        userUniversities.forEach((university) => {
          const card = document.createElement("div");
          card.className = "card university-card";
          card.setAttribute("data-name", university.name.toLowerCase());
          card.setAttribute("data-location", university.location);
          card.innerHTML = `
                    <div class="university-logo">
                        <img src="${
                          university.logoUrl ||
                          "/assets/default-university-logo.png"
                        }" alt="${university.name} Logo">
                    </div>
                    <h2>${university.name}</h2>
                    <p><strong>Location:</strong> ${university.location}</p>
                    <p><strong>Members:</strong> ${
                      university.members ? university.members.length : 0
                    }</p>
                    <p><strong>Your Role:</strong> ${getUserRole(
                      university
                    )}</p>
                    <p class="university-description">${
                      university.description || "No description available"
                    }</p>
                    <div class="university-actions">
                        <button class="btn btn-outline btn-block" onclick="viewUniversityDetails('${
                          university._id
                        }')">
                            View Details
                        </button>
                    </div>
                    <div class="member-badge">You are a member</div>
                `;
          container.appendChild(card);
        });
      }

      // Function to render all other universities (that user hasn't joined)
      function renderOtherUniversities(otherUniversities) {
        const container = document.getElementById("allUniversitiesList");

        if (!otherUniversities || otherUniversities.length === 0) {
          container.innerHTML =
            "<p>No other universities available. Register your university to get started!</p>";
          return;
        }

        container.innerHTML = "";
        otherUniversities.forEach((university) => {
          const card = document.createElement("div");
          card.className = "card university-card";
          card.setAttribute("data-name", university.name.toLowerCase());
          card.setAttribute("data-location", university.location);
          card.innerHTML = `
                    <div class="university-logo">
                        <img src="${
                          university.logoUrl ||
                          "/assets/default-university-logo.png"
                        }" alt="${university.name} Logo">
                    </div>
                    <h2>${university.name}</h2>
                    <p><strong>Location:</strong> ${university.location}</p>
                    <p><strong>Members:</strong> ${
                      university.members ? university.members.length : 0
                    }</p>
                    <p class="university-description">${
                      university.description || "No description available"
                    }</p>
                    <div class="university-actions">
                        <button class="btn btn-primary btn-block" onclick="joinUniversity('${
                          university._id
                        }')">
                            Join University
                        </button>
                        <button class="btn btn-outline btn-block" onclick="viewUniversityDetails('${
                          university._id
                        }')">
                            View Details
                        </button>
                    </div>
                `;
          container.appendChild(card);
        });
      }

      // Join university function
      async function joinUniversity(universityId) {
        console.log("Joining university:", universityId);
        console.log("Current user:", currentUser);

        const joinBtn = document.querySelector(
          `[onclick="joinUniversity('${universityId}')"]`
        );
        const originalText = joinBtn.textContent;

        try {
          joinBtn.textContent = "Joining...";
          joinBtn.disabled = true;

          const response = await fetch(`${baseUrl}/${universityId}/join`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              userId: currentUser?._id, // Send user ID in request body
            }),
          });

          const result = await response.json();

          console.log("Join response:", result);

          if (response.ok) {
            showMessage(
              "success",
              result.message || "Successfully joined the university!"
            );

            // Reload universities to update both sections
            setTimeout(loadUniversities, 500);
          } else {
            showMessage("error", result.error || "Failed to join university");
            joinBtn.textContent = originalText;
            joinBtn.disabled = false;
          }
        } catch (error) {
          console.error("Error joining university:", error);
          showMessage("error", "Error joining university. Please try again.");
          joinBtn.textContent = originalText;
          joinBtn.disabled = false;
        }
      }

      // View university details function
      function viewUniversityDetails(universityId) {
        console.log("Navigating to university details:", universityId);
        window.location.href = `${baseUrl}/${universityId}`;
      }

      // Join with code function
      async function joinUniversityWithCode(universityCode) {
        try {
          const response = await fetch(`${baseUrl}/join/${universityCode}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });

          const result = await response.json();

          if (response.ok) {
            showMessage(
              "success",
              result.message || "Successfully joined the university!"
            );
            closeJoinUniversityModal();
            loadUniversities(); // Reload universities list
          } else {
            showMessage("error", result.error || "Invalid university code");
          }
        } catch (error) {
          console.error("Error joining university with code:", error);
          showMessage("error", "Error joining university. Please try again.");
        }
      }

      function applyFilters() {
        const searchValue = document
          .getElementById("searchInput")
          .value.toLowerCase();
        const filterValue = document.getElementById("filterSelect").value;

        // Filter both user universities and other universities
        const filteredUserUniversities = universities.filter((university) => {
          const matchesSearch = university.name
            .toLowerCase()
            .includes(searchValue);
          const matchesFilter =
            filterValue === "all" || university.location === filterValue;
          const isMember = isUserMember(university);
          return matchesSearch && matchesFilter && isMember;
        });

        const filteredOtherUniversities = universities.filter((university) => {
          const matchesSearch = university.name
            .toLowerCase()
            .includes(searchValue);
          const matchesFilter =
            filterValue === "all" || university.location === filterValue;
          const isMember = isUserMember(university);
          return matchesSearch && matchesFilter && !isMember;
        });

        renderUserUniversities(filteredUserUniversities);
        renderOtherUniversities(filteredOtherUniversities);
      }

      // Modal Functions
      function openRegisterUniversityModal() {
        document.getElementById("registerUniversityModal").style.display =
          "block";
        document.getElementById("universityName").focus();
      }

      function closeRegisterUniversityModal() {
        document.getElementById("registerUniversityModal").style.display =
          "none";
        document.getElementById("registerUniversityForm").reset();
        hideMessages();
      }

      function openJoinUniversityModal() {
        document.getElementById("joinUniversityModal").style.display = "block";
        document.getElementById("universityCode").focus();
      }

      function closeJoinUniversityModal() {
        document.getElementById("joinUniversityModal").style.display = "none";
        document.getElementById("joinUniversityForm").reset();
        hideMessages();
      }

      function showMessage(type, text) {
        const messageEl = document.getElementById(type + "Message");
        messageEl.textContent = text;
        messageEl.style.display = "block";
        // Auto-hide after 5 seconds
        setTimeout(() => {
          hideMessages();
        }, 5000);
      }

      function hideMessages() {
        document.getElementById("successMessage").style.display = "none";
        document.getElementById("errorMessage").style.display = "none";
      }

      function loadUniversities() {
        // Make sure we have the current user
        if (!currentUser || !currentUser._id) {
          console.log("Waiting for user data...");
          setTimeout(loadUniversities, 100);
          return;
        }

        fetch(apiUrl)
          .then((res) => {
            if (!res.ok) {
              throw new Error(`Failed to fetch: ${res.status}`);
            }
            return res.json();
          })
          .then((data) => {
            universities = data;
            console.log("All universities loaded:", universities);
            console.log("Current user ID:", currentUser._id);

            // Separate universities into user's universities and other universities
            const { userUniversities, otherUniversities } =
              separateUserUniversities(universities);

            console.log("User universities found:", userUniversities.length);
            console.log("Other universities:", otherUniversities.length);

            // Render both sections
            renderUserUniversities(userUniversities);
            renderOtherUniversities(otherUniversities);
          })
          .catch((err) => {
            console.error("Error loading universities:", err);
            document.getElementById("userUniversitiesList").innerHTML =
              "<p>Error loading your universities. Please try again.</p>";
            document.getElementById("allUniversitiesList").innerHTML =
              "<p>Error loading universities. Please try again.</p>";
          });
      }

      // Handle register university form submission
      document
        .getElementById("registerUniversityForm")
        .addEventListener("submit", function (e) {
          e.preventDefault();
          const formData = new FormData(this);
          const universityData = {
            name: formData.get("name"),
            location: formData.get("location"),
            website: formData.get("website"),
            description: formData.get("description"),
          };

          const submitBtn = this.querySelector('button[type="submit"]');
          submitBtn.textContent = "Registering...";
          submitBtn.disabled = true;

          fetch(baseUrl, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(universityData),
          })
            .then((response) => {
              if (response.ok) {
                showMessage(
                  "success",
                  "University registered successfully! An administrator will review your request."
                );
                closeRegisterUniversityModal();
                setTimeout(loadUniversities, 1000);
              } else {
                return response.json().then((errorData) => {
                  throw new Error(
                    errorData.error || "Failed to register university"
                  );
                });
              }
            })
            .catch((error) => {
              // Fixed: Added closing parenthesis
              console.error("Error registering university:", error);
              showMessage(
                "error",
                "Error registering university: " + error.message
              );
            })
            .finally(() => {
              submitBtn.textContent = "Register University";
              submitBtn.disabled = false;
            });
        });
      // Handle join university form submission
      document
        .getElementById("joinUniversityForm")
        .addEventListener("submit", function (e) {
          e.preventDefault();
          const formData = new FormData(this);
          const universityCode = formData.get("code").toUpperCase().trim();

          if (universityCode.length !== 8) {
            showMessage("error", "University code must be 8 characters long");
            return;
          }

          joinUniversityWithCode(universityCode);
        });

      // Close modals when clicking outside
      window.addEventListener("click", function (event) {
        const registerModal = document.getElementById(
          "registerUniversityModal"
        );
        const joinModal = document.getElementById("joinUniversityModal");

        if (event.target === registerModal) {
          closeRegisterUniversityModal();
        }
        if (event.target === joinModal) {
          closeJoinUniversityModal();
        }
      });

      // Load universities when page loads
      document.addEventListener("DOMContentLoaded", function () {
        initializeCurrentUser();
        loadUniversities();

        // Add event listeners for real-time filtering
        document
          .getElementById("searchInput")
          .addEventListener("input", applyFilters);
        document
          .getElementById("filterSelect")
          .addEventListener("change", applyFilters);
      });
    </script>
  </body>
</html>
